<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.support.robigroup.ututor.screen.main.TopicFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/topic"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topic_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ex_topic_short" />

        <TextView
            android:id="@+id/class_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ex_class"
            android:textColor="@color/colorYellow" />

        <Button
            android:id="@+id/find_teacher"
            style="@style/reg_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/find_teacher_text" />

        <TextView
            android:id="@+id/number_of_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/teachers_accepted"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_teachers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_teacher"
            />
    </LinearLayout>

    <include layout="@layout/topics"
        android:id="@+id/topics_bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"/>

</FrameLayout>

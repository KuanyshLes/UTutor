<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.support.robigroup.ututor.features.account.AccountActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/account_ava"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:roundAsCircle="true"
            app:placeholderImage="@drawable/logo_blue"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_name"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/account_ava"
            android:layout_toEndOf="@+id/account_ava" />
        <TextView
            android:id="@+id/account_language"
            android:layout_below="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_language"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/account_ava"
            android:layout_toEndOf="@+id/account_ava" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"/>


    <RelativeLayout
        style="@style/acc_relative_layout"
        android:id="@+id/change_fio"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:layout_marginStart="@dimen/acc_changes_margin_left">
        <TextView
            style="@style/acc_change_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/change_fio"/>
        <ImageView
            style="@style/acc_change_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:background="@color/colorGrey"
        android:layout_marginStart="@dimen/acc_changes_margin_left" />
    <RelativeLayout
        android:id="@+id/change_email"
        style="@style/acc_relative_layout"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:layout_marginStart="@dimen/acc_changes_margin_left">
        <TextView
            style="@style/acc_change_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/change_email"/>
        <ImageView
            style="@style/acc_change_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_arrow_right_grey"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:background="@color/colorGrey"
        android:layout_marginStart="@dimen/acc_changes_margin_left"
        app:srcCompat="@drawable/ic_arrow_right_grey"/>
    <RelativeLayout
        android:id="@+id/change_password"
        style="@style/acc_relative_layout"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:layout_marginStart="@dimen/acc_changes_margin_left">
        <TextView
            style="@style/acc_change_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/change_password"/>
        <ImageView
            style="@style/acc_change_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_arrow_right_grey"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:background="@color/colorGrey"
        android:layout_marginStart="@dimen/acc_changes_margin_left" />
    <RelativeLayout
        android:id="@+id/change_language"
        style="@style/acc_relative_layout"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:layout_marginStart="@dimen/acc_changes_margin_left">
        <TextView
            style="@style/acc_change_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/change_language"/>
        <ImageView
            style="@style/acc_change_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_arrow_right_grey"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/acc_changes_margin_left"
        android:background="@color/colorGrey"
        android:layout_marginStart="@dimen/acc_changes_margin_left"/>

</LinearLayout>

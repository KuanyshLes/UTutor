<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <RatingBar
            android:id="@+id/his_rating"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:rating="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/his_subject_name"
            app:layout_constraintTop_toBottomOf="@+id/his_des" />

        <ImageView
            android:id="@+id/his_teacher_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ex_image_teacher" />

        <TextView
            android:id="@+id/his_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/ex_name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/his_subject_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/his_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/ex_math"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/his_teacher_image"
            app:layout_constraintTop_toBottomOf="@+id/his_teacher_name"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/his_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/ex_dollar"
            android:textColor="@color/colorLightBlue"
            app:layout_constraintBottom_toBottomOf="@+id/his_des"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/his_des"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/his_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/ex_time"
            app:layout_constraintStart_toStartOf="@+id/his_subject_name"
            app:layout_constraintTop_toBottomOf="@+id/his_subject_name" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
